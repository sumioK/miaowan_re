<div class="post-container">
        <%= form_tag("/posts/create",{multipart:true}) do %>
            <p>画像</p>
            <input name="image" type="file" class="post-picture" id="post-img">
            <br>
            <div id="new-image"></div> 
            <input name="content" class="post-body">
            <br>
            <input type="submit" value="投稿" class="post-submit">
        <% end %>
</div>