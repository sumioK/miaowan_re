<h1 class="page-title">ユーザー一覧</h1>
<div class="serch-form">
    <%= form_tag("/users/index" , method: :get) do %>
        <input name="serch" class="serch-indent">
        <input type="submit" value="検索" class="submit-btn">
    <% end %>
</div>

<div class="profiel-index">
    <% @users.each do |user| %>
        <div class="profiel-card">
            <div class="profiel-image">
                <%= link_to image_tag("/user_images/#{user.profiel_image}") , "/users/#{user.id}" %>
            </div>
            <div class="profiel-name">
                <h2><%= user.name %></h2>
            </div>
            <div class="profiel-introduce">
                <p><%= user.introduction %></p>
            </div>
        </div>
    <% end %>
</div>