<div class="login-form">
    <h2>Login</h2>
    <div class="form-body">
        <% if @error_message %>
            <div class="error-message">
                <%= @error_message %>
            </div>
        <% end%>
        <%= form_tag('/login') do %>
            <p>email</p>
            <input name='email' value="<%= @email %>">
            <p>password</p>  
            <input name='password' type='password' value="<%= @password %>">
            <input type='submit' value="login" >
        <% end%>
    </div>
</div>